@model hospitalmanagement.Models.Entities.islemler
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<style>
    body{
        background-color:bisque;
    }
    .Row {
        display: table;
        width: 100%; /*Optional*/       
        border-spacing: 50px; /*Optional*/
    }

    .Column {
        display: table-cell;
    }
</style>
<div class="container" style="margin-top: 20px; align-items: center; justify-content: center;">
    @using (Html.BeginForm("Add", "Islemler", FormMethod.Post))
    {
        <div class="form-group">
            <div class="card-body p-2">
                <div class="d-flex flex-row justify-content-center">
                    <div style="margin: auto;">
                        <div class="form-group text-center">
                            <div >
                                <label style="margin-top: 10px; font-size: 18px;"><b>Hasta Seçiniz</b></label>
                                <div style="display: flex; justify-content: center; align-items: center;">
                                    @Html.DropDownListFor(m => m.user.USERID, (List<SelectListItem>)ViewBag.hst, new { @class = "form-control", style = "text-align:center;width:300px;margin-top:10px;" })
                                </div>
                            </div>
                                <div class="form-group">
                            <label style="margin-top: 40px;font-size:18px; text-align: center;color:red;"><b>Tetkik İsteyiniz</b></label>
                            <div class="row">
                                <div class="column border rounded bg-success">
                                    <label class="checkbox-inline" style="margin-top:10px;">@Html.CheckBox("Tahlil", false) Tahlil</label>
                                    <br />
                                    <label style="margin-top:10px;">Tahlil Türü Ekleyiniz:</label>
                                    <input type="text" name="TACIKLAMA" class="form-control " style="margin-top: 5px; width: 300px;" />
                                    <br />
                                </div>
                                <div class="column border rounded bg-success">
                                    <label class="checkbox-inline" style="margin-top:10px;">@Html.CheckBox("Röntgen", false) Röntgen</label>
                                    <br />
                                    <label style="margin-top:10px;">Röntgen Türü Ekleyiniz:</label>
                                    <input type="text" name="RACIKLAMA" class="form-control " style="margin-top: 5px; width: 300px;" />
                                    <br />
                                </div>
                                <div class="column border rounded bg-success">
                                    <label class="checkbox-inline" style="margin-top:10px;">@Html.CheckBox("Ultrason", false) Ultrason</label>
                                    <br />
                                    <label style="margin-top:10px;">Ultrason Türü Ekleyiniz:</label>
                                    <input type="text" name="UACIKLAMA" class="form-control " style="margin-top: 5px; width: 300px;" />
                                    <br />
                                </div>
                                </div>
                            </div>
                            <div style="margin-top:10px;">
                                <button class="btn btn-info">Tetkik İste</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

