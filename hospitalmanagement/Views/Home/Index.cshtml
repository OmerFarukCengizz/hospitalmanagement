
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<style>
    .hero-header {
        background: url(../img/hero.jpg) top right no-repeat;
        background-size: cover;
    }
</style>
<div class="container-fluid bg-primary py-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-start py-5">
            <div class="col-lg-8 text-center text-lg-start py-2">
                <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5 text-light" style="color:white;border-color: rgba(256, 256, 256, .3) !important;">Medic'e Hoşgeldiniz</h5>
                <h1 class="display-1 text-white mb-md-4">Şehrinizdeki En İyi Hastane</h1>
                <div class="pt-2">
                    @if (!User.IsInRole("doktor"))
                    {
                        <a href="/Home/HBilgi" class="btn btn-light rounded-pill py-md-3 px-md-5 mx-2">Sonuç Görüntüle</a>
                    }
                    @if (User.IsInRole("doktor"))
                    {
                        <a href="/Islemler/HastaBilgi" class="btn btn-light rounded-pill py-md-3 px-md-5 mx-2">Sonuç Görüntüle</a>
                    }
                    <a href="/Home/Hakkımızda" class="btn btn-outline-light rounded-pill py-md-3 px-md-5 mx-2">Hakkımızda</a>
                </div>
            </div>
        </div>
    </div>
</div>

